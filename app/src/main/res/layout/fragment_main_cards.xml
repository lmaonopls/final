            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="2dp">

            <ImageButton

                android:id="@+id/aceHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:src="@drawable/ace_of_hearts"
                android:scaleType="fitXY"
                android:layout_marginVertical="2dp">

            </ImageButton>

            <ImageButton

                android:id="@+id/kingHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:src="@drawable/king_of_hearts"
                android:scaleType="fitXY"
                android:layout_marginVertical="2dp">

            </ImageButton>

            <ImageButton

                android:id="@+id/queenHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:src="@drawable/queen_of_hearts"
                android:scaleType="fitXY"
                android:layout_marginVertical="2dp">

            </ImageButton>

            <ImageButton

                android:id="@+id/jackHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:src="@drawable/jack_of_hearts"
                android:scaleType="fitXY"
                android:layout_marginVertical="2dp">

            </ImageButton>

            <ImageButton

                android:id="@+id/tenHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:src="@drawable/ten_of_hearts"
                android:scaleType="fitXY"
                android:layout_marginVertical="2dp">

            </ImageButton>

            <ImageButton

                android:id="@+id/nineHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:src="@drawable/nine_of_hearts"
                android:scaleType="fitXY"
                android:layout_marginVertical="2dp">

            </ImageButton>

            <ImageButton

                android:id="@+id/eightHeart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
