    </LinearLayout>

    <Button

        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/white">

    </Button>

</LinearLayout>