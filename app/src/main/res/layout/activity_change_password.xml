<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity"
    android:background="@drawable/bg2">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CHANGE PASSWORD"
        android:textColor="#B4FFFFFF"
        android:background="@drawable/joker_assistant"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp">

    </TextView>

    <EditText
        android:id="@+id/newPasswordView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="New Password"
        android:textColorHint="#72FFFFFF"
        android:textColor="#C5F1B9"
        android:textAlignment="center"
        android:background="@drawable/joker_assistant"
        android:textSize="20sp"
        android:layout_margin="10dp">

    </EditText>

    <Button
        android:id="@+id/changePasswordSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="#D5FFFFFF"
        android:layout_marginHorizontal="130dp"
        android:layout_marginVertical="10dp">

    </Button>
</LinearLayout>